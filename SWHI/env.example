# Suspicious Domain Hosting Identifier - Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://suspicious_app:secure_password_123@localhost:5432/suspicious_domains
DB_HOST=localhost
DB_PORT=5432
DB_NAME=suspicious_domains
DB_USER=suspicious_app
DB_PASSWORD=secure_password_123

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# External API Keys (Optional)
IPAPI_KEY=your-ipapi-key-here
SHODAN_API_KEY=your-shodan-key-here
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache Configuration (Redis - Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # 1 hour

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Production Settings
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=postgresql://user:pass@host:port/db
# REACT_APP_API_URL=https://your-api-domain.com



